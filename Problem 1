def get_name():
    a =input('Enter your name full name: ')
    return a
def get_tshirt():
    a= get_name()
    brand_name =input("Enter the brand name you want:")
    available_brands = ['Nike', 'Adidas', 'Levis', 'Puma', 'Arrow']
    
    if brand_name in available_brands:
        greeting = 'Hi' + ' ' + a + ', ' + 'the brand you are looking for is available in our store.'
    else:
        greeting = 'Hi' + ' ' + a + ', ' + 'Unfortunately the brand you are looking for is not available in our store.' 
    return greeting
print(get_tshirt())
